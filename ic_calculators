    <body>
        <div class="wrap">
            <div class="heading">
                <h1>Pricing Table</h1>
                <span class="sub"
                    >Edit only <strong>New IC Price</strong>.
                    <em>New Service Price</em> is auto-calculated using a hidden
                    ratio.</span
                >
            </div>

            <div class="card">
                <div class="toolbar">
                    <div class="hint">
                        Formula:
                        <code>New Service Price = New IC Price × Ratio</code>
                    </div>
                    <button class="btn" id="resetBtn">Reset</button>
                </div>

                <table id="priceTable">
                    <thead>
                        <tr>
                            <th style="width: 22%">Service Categories</th>
                            <th>Variant</th>
                            <th>Service Price</th>
                            <th>IC Price</th>
                            <th>New IC Price</th>
                            <th>New Service Price</th>
                            <th data-role="ratio">Ratio</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>

                <div class="footer">
                    <span class="pill" id="rowCount"></span>
                    <span class="hint"
                        >All monetary values are shown in AUD.</span
                    >
                </div>
            </div>
        </div>

        <script>
            const data = [
                {
                    category: "🧑🏻‍🦽 Independence",
                    variant: "Standard",
                    servicePrice: 110.0,
                    icPrice: 65.0,
                    ratio: 1.69230769,
                },
                {
                    category: "🧑🏻‍🦽 Independence",
                    variant: "Saturday",
                    servicePrice: 145.5,
                    icPrice: 97.5,
                    ratio: 1.49230769,
                },
                {
                    category: "🧑🏻‍🦽 Independence",
                    variant: "Sunday",
                    servicePrice: 194.0,
                    icPrice: 130.0,
                    ratio: 1.49230769,
                },
                {
                    category: "🧑🏻‍🦽 Independence",
                    variant: "Public Hol",
                    servicePrice: 241.75,
                    icPrice: 162.0,
                    ratio: 1.49228395,
                },

                {
                    category: "🏡 Everyday Living",
                    variant: "Standard",
                    servicePrice: 99.0,
                    icPrice: 62.0,
                    ratio: 1.59677419,
                },
                {
                    category: "🏡 Everyday Living",
                    variant: "Saturday",
                    servicePrice: 129.2,
                    icPrice: 92.5,
                    ratio: 1.39675676,
                },
                {
                    category: "🏡 Everyday Living",
                    variant: "Sunday",
                    servicePrice: 172.5,
                    icPrice: 123.5,
                    ratio: 1.39676113,
                },
                {
                    category: "🏡 Everyday Living",
                    variant: "Public Hol",
                    servicePrice: 216.5,
                    icPrice: 155.0,
                    ratio: 1.39677419,
                },
            ];

            const AUD = new Intl.NumberFormat("en-AU", {
                style: "currency",
                currency: "AUD",
            });
            const fmt = (n) => AUD.format(Number.isFinite(n) ? n : 0);
            const toNumber = (v) =>
                parseFloat(String(v).replace(/[^0-9.-]/g, "")) || 0;

            function computeNewServicePrice(newIcPrice, ratio) {
                return +(toNumber(newIcPrice) * ratio).toFixed(2);
            }

            const tbody = document.querySelector("#priceTable tbody");

            function render() {
                tbody.innerHTML = "";
                data.forEach((row, idx) => {
                    const tr = document.createElement("tr");
                    tr.innerHTML = `
          <td>${row.category}</td>
          <td>${row.variant}</td>
          <td class="num">${fmt(row.servicePrice)}</td>
          <td class="num">${fmt(row.icPrice)}</td>
          <td><input class="money" inputmode="decimal" data-index="${idx}" value="${row.newIcPrice ?? ""}" placeholder="Enter…"></td>
          <td class="num" data-role="new-service" data-index="${idx}">${row.newServicePrice ? fmt(row.newServicePrice) : ""}</td>
          <td class="num" data-role="ratio">${row.ratio.toFixed(8)}</td>
        `;
                    tbody.appendChild(tr);
                });
            }

            render();

            function updateRowFromInput(inputEl) {
                const idx = Number(inputEl.dataset.index);
                const newIc = toNumber(inputEl.value);
                data[idx].newIcPrice = newIc;
                data[idx].newServicePrice = computeNewServicePrice(
                    newIc,
                    data[idx].ratio,
                );

                const cell = tbody.querySelector(
                    `td[data-role="new-service"][data-index="${idx}"]`,
                );
                cell.textContent = fmt(data[idx].newServicePrice);
            }

            tbody.addEventListener("input", (ev) => {
                const t = ev.target;
                if (t.matches("input.money")) updateRowFromInput(t);
            });

            tbody.addEventListener(
                "blur",
                (ev) => {
                    const t = ev.target;
                    if (!t.matches("input.money")) return;
                    const n = toNumber(t.value);
                    t.value = t.value ? fmt(n) : "";
                },
                true,
            );

            tbody.addEventListener(
                "focus",
                (ev) => {
                    const t = ev.target;
                    if (!t.matches("input.money")) return;
                    const n = toNumber(t.value);
                    t.value = n ? String(n) : "";
                    t.select();
                },
                true,
            );

            document
                .getElementById("resetBtn")
                .addEventListener("click", () => {
                    data.forEach((r) => {
                        r.newIcPrice = null;
                        r.newServicePrice = null;
                    });
                    render();
                });
        </script>
    </body>
</html>
